a)
SELECT CLIENTS.CLIENT_NAME, ORDERS.ORDER_SUM FROM CLIENTS INNER JOIN ORDERS ON CLIENTS.CLIENT_ID = ORDERS.CLIENT_ID WHERE ORDER_SUM > 50;

b)
SELECT CLIENTS.CLIENT_ID, CLIENTS.CLIENT_NAME, SUM(ORDERS.ORDER_SUM) AS TOTAL_SUM FROM CLIENTS INNER JOIN ORDERS ON CLIENTS.CLIENT_ID = ORDERS.CLIENT_ID GROUP BY ORDERS.CLIENT_ID HAVING SUM(ORDERS.ORDER_SUM) > 100;